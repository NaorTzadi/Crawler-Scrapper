package org.example;
import java.io.IOException;
import java.net.HttpURLConnection;
import java.net.URL;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;
import java.util.Map;
public class WebScrapper {
    private static final String getAllScrapedInfo="1";
    private static final String getKeyWordAmountOfOccurrences="2";
    private static final String getImageUrls="3";
    private static final String getVideoUrls="4";
    public static Object webScrapperOperator(String url,String option){
        Utility.isConnected();
        if (Utility.isAccessAllowed(url)){
            if (option.equals(getAllScrapedInfo)){
                return JsoupScrapper.getAllScrapedInfo(url);
            }else if (option.equals(getKeyWordAmountOfOccurrences)){
                return JsoupScrapper.getKeyWordAmountOfOccurrences(url);
            } else if (option.equals(getImageUrls)) {
                return JsoupScrapper.getImageUrls(url);
            } else if (option.equals(getVideoUrls)) {
                return JsoupScrapper.getVideoUrls(url);
            }
        }else {
            if (option.equals(getAllScrapedInfo)){
                return SeleniumScrapper.getAllScrapedInfo(url);
            }else if (option.equals(getKeyWordAmountOfOccurrences)){
                return SeleniumScrapper.getKeyWordAmountOfOccurrences(url);
            } else if (option.equals(getImageUrls)) {
                return SeleniumScrapper.getImageUrls(url);
            } else if (option.equals(getVideoUrls)) {
                return SeleniumScrapper.getVideoUrls(url);
            }
        }
        return null;
    }
    public static int countOccurrences(String text, String keyWord) { // WebScrapperUtility
        String[] words = text.split("\\s+");
        int count = 0;
        for (String word : words) {
            if (word.equalsIgnoreCase(keyWord)) {
                count++;
            }
        }
        return count;
    }
    public static String getContentType(String urlString) {
        HttpURLConnection connection = null;
        try {
            URL url = new URL(urlString);
            connection = (HttpURLConnection) url.openConnection();
            connection.setRequestMethod("HEAD");
            connection.setConnectTimeout(10000); // 10 seconds connect timeout
            connection.setReadTimeout(10000); // 10 seconds read timeout
            connection.connect();

            String contentType = connection.getContentType();
            return contentType != null ? contentType : "Content type not available";
        } catch (IOException e) {
            e.printStackTrace();
            return "Error occurred: " + e.getMessage();
        } finally {
            if (connection != null) {
                connection.disconnect();
            }
        }
    }

